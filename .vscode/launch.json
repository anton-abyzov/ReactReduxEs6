{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Mocha",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": ["tools/testSetup.js", "${workspaceFolder}/src/**/store.test.js"], //you can specify paths to specific tests here            
            "cwd": "${workspaceRoot}",            
            "env": {
                "NODE_ENV": "testing"
            }
        }
    ]
}